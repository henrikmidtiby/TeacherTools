  temp <- temp[order(temp$Point), ]
  temp$strings <- sprintf("\\textbf{\\hyperref[ssecID%s]{%s} - %s}: %s \\\\\n", temp$ID, temp$ID, temp$Point, temp$Comment)
  cat(temp$strings)
  cat("\n\n")

}
