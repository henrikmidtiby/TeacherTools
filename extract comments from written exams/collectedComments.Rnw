\section{Indlæser data}
<<echo=FALSE>>=
library(ggplot2)
library(plyr)
data <- read.table('statistics', sep='\t', encoding='ascii', header=T, quote="")
#data$Comment <- gsub("æ", "ae", data$Comment)
#data$Comment <- gsub("ø", "oe", data$Comment)
#data$Comment <- gsub("å", "aa", data$Comment)
#data$Comment <- gsub("\\\\r", " ", data$Comment)
#data$Comment <- gsub("\\\\", "", data$Comment)
#data$Comment <- gsub("%", "\\%", data$Comment)
data$ID <- factor(data$ID)
# Make anonymous
#data$ID <- factor(data$ID, levels=levels(data$ID), labels=seq(length(levels(data$ID))))

extraPoints <- read.table('pointsFromCountingActivities.csv', sep=';', header=TRUE)
extraPoints <- extraPoints[, c(2, 3)]
extraPoints <- subset(extraPoints, extraPoints$ID != '')
extraPoints$Exercise <- 'SemesterActivity'
extraPoints$Comment <- ''
extraPoints$Point <- round(extraPoints$Point * 1. / 0.85, 2)


# (a*15) / (100 + a*15) == 0.15
# (a*15) == 0.15 * (100 + a*15)
# a*15 == 15 + 0.15*a*15
# a * (100*0.15 + 0.15*15) = 15
# a = 15 / (100*0.15 + 0.15*15)
# a = 15 / (90*0.15 + 0.15*15)
# Determined such that the 15 points from the counting activites
# will count 15% of the final evaluation.
scalingFactor <- 15 / (90*0.15 + 0.15*15)
scalingFactor <- 1

#data <- rbind(data, extraPoints) 
data$ID <- factor(data$ID)
@

