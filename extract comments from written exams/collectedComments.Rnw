\section{Kommentarer pr opgave}
<<echo=FALSE, results='asis'>>=
for(oneExercise in levels(data$Exercise))
{
  cat(sprintf("\\subsection{%s}\n", oneExercise))
  cat(sprintf("\\label{ssecExercise%s}\n", oneExercise))
